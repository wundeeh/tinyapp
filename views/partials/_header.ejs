<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarNavAltMarkup"
    aria-controls="navbarNavAltMarkup"
    aria-expanded="false"
    aria-label="Toggle navigation"
    >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/urls">My URLs</a>
      <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      <% if (!user) { %>
        <form method="POST" action="/login" name="username" style="display: flex; margin-left: 1200px;">
          <input type="text" name="username" placeholder="Username">
          <button class="btn btn-outline-dark submit">Submit</button>
        </form>
      <% } else { %>
        <form method="POST" action="/logout" name="loggedIn" style="display: flex; margin-left: 1250px;">
          <p style="padding-right: 20px; padding-top: 10px; margin-bottom: 0;">Logged in as: <%= user.email %></p>
          <button class="btn btn-outline-dark">Logout</button>
        </form>
      <% } %>
    </div>
    </div>
  </nav>
</header>
